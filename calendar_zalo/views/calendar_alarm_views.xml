<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="calendar_alarm_view_form" model="ir.ui.view">
        <field name="name">calendar.alarm.view.form.inherit.calendar.sms</field>
        <field name="model">calendar.alarm</field>
        <field name="inherit_id" ref="calendar.calendar_alarm_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='alarm_type']" position="after">
                <field name="zalo_id" invisible="alarm_type != 'zalo'" options='{"no_open": True, "no_create": True}'
                    context="{'default_model': 'calendar.event'}" />
            </xpath>
        </field>
    </record>

    <record id="view_calendar_alarm_tree_zalo" model="ir.ui.view">
        <field name="name">calendar.alarm.list.calendar_zalo</field>
        <field name="model">calendar.alarm</field>
        <field name="inherit_id" ref="calendar.view_calendar_alarm_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="zalo_id"/>
            </xpath>
        </field>
    </record>

